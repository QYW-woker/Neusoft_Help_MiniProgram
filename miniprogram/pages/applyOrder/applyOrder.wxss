.body{
    background-color: #fff;
    width: 90%;
    margin: 70rpx auto;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.body .avatar{
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top:-50rpx;
    background-color: #fff;
    border: 5rpx solid yellow;
}

.body .avatar image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.body .tips{
    width: 80%;
    background-color: rgba(16,103,209,0.2);
    text-align: center;
    margin-top: 100rpx;
    color: #1067D1;
    padding: 20rpx 0;
    border: 2rpx solid #1067D1;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.body .item{
    display:flex;
    justify-content: space-between;
    width: 90%;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #d1d1d1;
    align-items: center;
}

.body .item input{
    text-align: right;
}

.body .item .left{
    display: flex;
    align-items: center;
}

.body .item .left image{
    width: 40rpx;
    height: 40rpx;
}

.body .item .right{
    color: #a1a1a1;
}

.body .item .left text{
    margin-left: 20rpx;
}

.body .uploadImg{
    width: 90%;
    padding: 20rpx 0; 
}

.body .uploadImg .upload{
    padding: 150rpx 300rpx;
    border: 2rpx dashed #a1a1a1;
    color: #a1a1a1;
    margin-top: 20rpx;
    font-size: 40rpx;
    border-radius: 20rpx;
    position: relative;
}

.body .uploadImg .upload image{
    position: absolute;
    width: 600rpx;
    height: 300rpx;
    top: 0;
    left: 0;
}

.mt{
    margin-top: 40rpx !important;
}





